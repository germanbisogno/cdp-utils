{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "strict": true,
        "resolveJsonModule": true,
        "noImplicitAny": false
    },
    "include": [
        "src/**/*.ts",
        "./node_modules/lighthouse/types/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "**/pages",
        "**/images"
    ]
}