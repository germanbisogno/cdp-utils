{
    "compilerOptions": {
        "target": "es5",
        "module": "es6",
        "declaration": true,
        "outDir": "./dist",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noImplicitAny": false,
        "skipLibCheck": true,
        "moduleResolution": "node"
    },
    "include": [
        "src/**/*.ts",
        "./node_modules/lighthouse/types/**/*.d.ts" ],
    "exclude": [
        "node_modules",
        "**/__tests__/*",
        "**/pages",
        "**/images"
    ]
}